            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="9px"
                    android:layout_height="match_parent"
                    android:background="#000000"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ubarologo"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="9px"
                    android:layout_height="match_parent"
                    android:background="#000000"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF"
            android:minHeight="200px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance:"
                    android:layout_weight="2"
                    android:textSize="44px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:layout_weight="1"
                    android:textSize="40px"
                    android:id="@+id/lblBalance"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="160px"
                    android:layout_height="wrap_content"
                    android:text="Agregar\no retirar"
                    android:textSize="24px"
                    android:id="@+id/btnAgregarSaldo"
                    android:backgroundTint="#6aea50"
                    android:background="@drawable/roundshapebtn"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recientes:"
            android:gravity="left"
            android:textSize="35px"
            android:textColor="#FFFFFF"/>

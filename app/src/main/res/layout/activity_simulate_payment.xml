<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tonyjm.ubarodemo.SimulatePaymentActivity"
    android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:id="@+id/ivEstablecimiento"

            android:cropToPadding="false"
            android:background="@drawable/rollpizza" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Â¿Confirmar pago por: $34.9.00?"
                android:layout_gravity="center"
                android:layout_weight="1.6"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/lblPreguntaPago"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Negar"
                    android:layout_weight="1"
                    android:backgroundTint="#d24646"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/roundshapebtn"
                    android:textSize="20dp"
                    android:id="@+id/btnDenegarPago"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Confirmar"
                    android:layout_weight="1"
                    android:backgroundTint="#4daa2e"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/roundshapebtn"
                    android:textSize="20dp"
                    android:id="@+id/btnConfirmarPago"/>
            </LinearLayout>

        </LinearLayout>



    

</LinearLayout>
